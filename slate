# bind d:${hyper} layout normalLayout

# Window Hints
config windowHintsShowIcons true
config windowHintsSpread true
config windowHintsIgnoreHiddenWindows false
bind a:${hyper} hint HJKLYUIOPVBNM # keys to use for overlay

# Grid
bind g:${hyper} grid padding:5 1920x1200:16,10 1440x900:16,10

# Use the Slate task switcher (beta)
# bind tab:cmd switch

# Reload Slate configuration file
bind s:${hyper} relaunch
