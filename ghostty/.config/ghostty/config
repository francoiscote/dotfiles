theme = dark:Github Dark Dimmed,light:Github Light Default
# theme = Github Dark Dimmed
font-family = "0xProto Nerd Font Mono"
font-thicken = true
font-size = 16

macos-titlebar-style = "tabs"
shell-integration-features = no-cursor
confirm-close-surface = false
cursor-style = block

unfocused-split-opacity = 0.8


# Keybinds
# ctrl+arrow to move focus between splits
keybind = ctrl+left=goto_split:left
keybind = ctrl+right=goto_split:right
keybind = ctrl+up=goto_split:up
keybind = ctrl+down=goto_split:down

# alt+cmd+arrow to move focus between tabs
keybind = alt+super+left=previous_tab
keybind = alt+super+right=next_tab
