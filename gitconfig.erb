[alias]
	co = checkout
	count = !git shortlog -sn
	banane = fetch --prune
[color]
	ui = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vi
[apply]
	whitespace = nowarn
[help]
	autocorrect = 1
[push]
	default = simple
[pager]
  diff = "diff-so-fancy | less --tabs=4 -RFX"
  show = "diff-so-fancy | less --tabs=4 -RFX"
